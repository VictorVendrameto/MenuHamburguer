<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuHamburguer.Views.VerComponente"
             BackgroundColor="#F3F2F0">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <ScrollView>
                <StackLayout Padding="20">
            <Label Text="{Binding Nome}" HorizontalTextAlignment="Center" FontAttributes="Bold"
                   Margin="0, 0, 0, 30" TextColor="Black" FontSize="Title" />
            
            <Label Text="Atribuições e Responsabilidades" HorizontalTextAlignment="Center" TextColor="Black"
                   FontSize="Medium"/>

            <Label Text="{Binding AtribuicoesResponsabilidades}" Margin="0, 0, 0, 30" FontSize="Medium" 
                   HorizontalTextAlignment="Center"/>
        
            <Label Text="Valores e Atitudes" HorizontalTextAlignment="Center" TextColor="Black"
                   FontSize="Medium"/>
                    
            <Label Text="{Binding ValoresAtitudes}" HorizontalTextAlignment="Center" FontAttributes="Bold"
                   Margin="0, 0, 0, 30" TextColor="Black" FontSize="Title" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>