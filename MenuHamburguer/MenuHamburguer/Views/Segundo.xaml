<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuHamburguer.Views.Segundo"
             BackgroundColor="#F3F2F0"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             Title="Disciplinas do Segundo Ano"
             mc:Ignorable="d">
    <ContentPage.Content>
         <ScrollView>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10">

                <Button Text="Inglês Instrumental " Clicked="btn_Ing" Style="{ StaticResource btnCinza }" />
                <Button Text="Desenvolvimento de Sistemas " Clicked="btn_DS" Style="{ StaticResource btnCinza }" />
