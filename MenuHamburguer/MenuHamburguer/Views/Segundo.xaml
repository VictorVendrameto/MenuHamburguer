                <Button Text="Ética e Cidadania Organizacional " Clicked="btn_ET" Style="{ StaticResource btnCinza }" />
                <Button Text="Programação de Aplicativos Mobile I " Clicked="btn_APM" Style="{ StaticResource btnCinza }" />
                <Button Text="Programação Web II " Clicked="btn_PW2" Style="{ StaticResource btnCinza }" />
                <Button Text="Sistemas Embarcados " Clicked="btn_SE" Style="{ StaticResource btnCinza }" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>